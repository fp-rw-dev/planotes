{
	"name": "planotes",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev:web": "turbo run dev --filter=@planotes/web build:watch --filter=@planotes/ui --parallel",
		"build:web": "turbo run build --filter=@planotes/web",
		"start:web": "turbo run start --filter=@planotes/web",
		"dev:design": "turbo run dev --filter=@planotes/design build:watch --filter=@planotes/ui --parallel",
		"build:design": "turbo run build --filter=@planotes/design",
		"lint": "turbo run lint",
		"typecheck": "turbo run typecheck"
	},
	"devDependencies": {
		"@planotes/tsconfig": "workspace:*",
		"eslint-config-planotes": "workspace:*",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"turbo": "^1.6.1",
		"unocss": "^0.45.30"
	},
	"engines": {
		"node": ">=18 <19",
		"pnpm": ">=7"
	}
}
