{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".solid/**"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"typecheck": {
			"dependsOn": ["build"]
		},
		"build:watch": {
			"cache": false
		},
		"dev": {
			"cache": false
		},
		"start": {
			"dependsOn": []
		},
		"playground": {
			"cache": false
		}
	}
}
