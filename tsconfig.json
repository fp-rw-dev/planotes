{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"noEmit": true,
		"moduleResolution": "node",
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"types": ["vite/client"],
		"importsNotUsedAsValues": "remove",
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["**/*"],
	"exclude": ["dist"]
}
